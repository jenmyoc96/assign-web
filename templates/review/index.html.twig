{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}

    <h1>Review index</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Chocolateid</th>
                <th>Review</th>
                <th>Placeofpurchase</th>
                <th>Pricepaid</th>
                <th>Numofstar</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.user }}</td>
                <td>{{ review.chocolateid }}</td>
                <td>{{ review.review }}</td>
                <td>{{ review.placeofpurchase }}</td>
                <td>{{ review.pricepaid }}</td>
                <td>{{ review.numofstar }}</td>
                <td>{{ review.date ? review.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('review_show', {'id': review.id}) }}">show</a>
                    <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('review_new') }}">Create new</a>

{% endblock %}